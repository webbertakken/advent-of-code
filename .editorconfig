root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 120
tab_width = 2
trim_trailing_whitespace = true

[*.rs]
indent_size = 4
tab_width = 4

[*.go]
indent_style = tab

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.txt]
max_line_length = off
insert_final_newline = false
trim_trailing_whitespace = false

[COMMIT_EDITMSG]
max_line_length = off
